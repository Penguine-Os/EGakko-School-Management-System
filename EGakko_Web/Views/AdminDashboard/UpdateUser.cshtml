@model AdminViewModel
<div class="d-sm-flex align-items-center justify-content-between my-4">

    <h1 class="h3 mb-0 text-gray-800">Update User</h1>

</div>
<div class="card shadow bg-dark ">
    <div class="card-header py-3">
        <form class="container">

            <div class="row row-cols-1 row-cols-md-2">
                @*Column one*@
                <div class="col">
                    <div class="form-group my-3">
                        <input type="email" class="form-control"  placeholder="First Name">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control"  placeholder="Last Name">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control"  placeholder="Email Adress">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control"  placeholder="Street">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control" placeholder="House Number">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control" placeholder="ZipCode">
                    </div>
                    <div class="form-group my-3">
                        <input type="email" class="form-control" placeholder="City">
                    </div>
                    <div class="form-group my-3">
                        <input type="date" class="form-control" >
                    </div>
               
                </div>
                @*Column two*@
                <div class="col">
                    <div class="form-group my-3">
                        <input  class="form-control" placeholder="Salary">
                    </div>
                     <div class="form-group my-3">
                        <input type="text" class="form-control" placeholder="Diploma Title">
                    </div>
                     <div class="form-group my-3">
                        <input type="text" class="form-control" placeholder="Diploma Title">
                    </div>
                     <div class="form-group my-3">
                        
                         <select style="height: 3rem" class="form-select" aria-label="Fees Are Payed?">
                             <option disabled selected hidden >Fees Are Payed?</option>
                             <option  value="true">Payed</option>
                             <option value="false">Not Payed</option>
                         </select>
                    </div>
                        
                     <div class="form-group my-3">
                        
                         <select style="height: 3rem" class="form-select" aria-label="Select Class">
                             <option disabled selected hidden >Select Class</option>
                             <option  value="true">Payed</option>
                             <option value="false">Not Payed</option>
                         </select>
                    </div>
                        
                     <div class="form-group my-3">
                        
                         <select style="height: 3rem" class="form-select" aria-label="Select Field">
                             <option disabled selected hidden >Select Field</option>
                             <option  value="true">Payed</option>
                             <option value="false">Not Payed</option>
                         </select>
                    </div>
                        
                         <div class="input-group my-3 form-group  ">
                        @*<select asp-items="@Html.GetEnumSelectList<Gender>()"></select>*@
                        <select style="height: 3rem" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-select">
                            <option disabled selected hidden>Select Your Sex</option>

                        </select>
                    </div
                </div>
                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-outline-success">Update</button>
                </div>
            </div>
        </form>
        
    </div>
</div>
